<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileEditActivity">

    <ImageView
        android:id="@+id/edit_profile_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_myprofile_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toChangePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changePhoto"
        android:text="Alterar foto de perfil"
        android:textColor="#051DF3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_img" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Nome"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toChangePhoto" />

    <EditText
        android:id="@+id/edt_profile_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:padding="8dp"
        android:text="Não sei"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/txtNome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtNome" />

    <TextView
        android:id="@+id/txtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Nascimento"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/edt_profile_nome"
        app:layout_constraintTop_toBottomOf="@id/edt_profile_nome" />

    <EditText
        android:id="@+id/edt_profile_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:inputType="date"
        android:padding="8dp"
        android:text="000000"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/txtNome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtData" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Email"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/edt_profile_nome"
        app:layout_constraintTop_toBottomOf="@id/edt_profile_data" />

    <EditText
        android:id="@+id/edt_profile_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:padding="8dp"
        android:text="Não sei"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/txtNome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEmail" />

    <ImageView
        android:id="@+id/bt_save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:onClick="buttonToSavePressed"
        android:src="@drawable/ic_save_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>