<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4169e1"
    android:id="@+id/drawer_layout"
    tools:context=".telaDoEvento">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#FAF7F7"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">


            <EditText
                android:id="@+id/tela_evento_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:enabled="false"
                android:padding="10dp"
                android:text="Título"
                android:textAlignment="center"
                android:textColor="#FF000000"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/imagemEvento"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tela_evento_titulo"
                app:layout_constraintVertical_bias="0.02" />

            <EditText
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="1dp"
                android:paddingBottom="10dp"
                android:text="Data: "
                android:textAlignment="center"
                android:textColor="#FF000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tela_evento_descricao"
                app:layout_constraintVertical_bias="0.02" />

            <EditText
                android:id="@+id/tela_evento_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:enabled="false"
                android:hint="20/06/2020"
                android:inputType="number"
                android:paddingLeft="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toRightOf="@id/data"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tela_evento_descricao"
                app:layout_constraintVertical_bias="0.02" />

            <EditText
                android:id="@+id/Hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="2dp"
                android:paddingBottom="10dp"
                android:text="Hora:"
                android:textColor="#FF000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@id/tela_evento_data"
                app:layout_constraintRight_toLeftOf="@id/tela_evento_hora"
                app:layout_constraintTop_toBottomOf="@id/tela_evento_descricao"
                app:layout_constraintVertical_bias="0.02" />

            <EditText
                android:id="@+id/tela_evento_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:enabled="false"
                android:hint="22:40"
                android:inputType="number"
                android:paddingLeft="4dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tela_evento_descricao"
                app:layout_constraintVertical_bias="0.02" />

            <EditText
                android:id="@+id/endereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:enabled="false"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="2dp"
                android:paddingBottom="10dp"
                android:text="Endereco:"
                android:textColor="#FF000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/data"
                app:layout_constraintVertical_bias="0.01" />

            <EditText
                android:id="@+id/tela_evento_endereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@null"
                android:enabled="false"
                android:hint="Rua Sao José do Rio Preto"
                android:paddingLeft="2dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toRightOf="@id/endereco"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/endereco"
                app:layout_constraintVertical_bias="0" />

            <EditText
                android:id="@+id/tela_evento_numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:enabled="false"
                android:hint="240"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="#FF000000"
                android:textColorHint="#FF000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toRightOf="@id/tela_evento_endereco"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tela_evento_endereco"
                app:layout_constraintVertical_bias="0" />

            <EditText
                android:id="@+id/tela_evento_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:maxHeight="150dp"
                android:background="@drawable/caixa_de_texto_descricao_tela_do_evento"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textColor="#FF000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@id/endereco"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imagemEvento"
                app:layout_constraintVertical_bias="0"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="352dp" />

            <Button
                android:id="@+id/botaoParticiparEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Participar"
                android:onClick="botaoTelaEvento"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tela_evento_endereco"
                app:layout_constraintVertical_bias="0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearlayoutz">

        <include
            layout="@layout/main_toolbar"
            android:id="@+id/toolbar_main"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/main_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>